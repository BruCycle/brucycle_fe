<br><br>
<center>
  <%= form_with url: "/user", method: :patch, local: true do |f| %>
    <%= f.label :username, "Username", class: 'font-weight-bold text-white' %>
    <%= f.text_field :username, value: current_user.username %>
    <br><br>
    <%= f.label :email, 'Email', class: 'font-weight-bold text-white' %>
    <%= f.text_field :email, value: current_user.email %>
    <p class="text-warning"><i>We only email safety notifications based on the amount of beers you've drunk</i></p>

    <%= f.submit "Update", class: 'btn btn-warning' %>
  <% end %>
</center>